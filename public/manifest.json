{
  "manifest_version": 3,
  "name": "World Tracer Helper",
  "version": "1.0.3",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "type": "module"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["scripting", "activeTab", "commands"],
  "action": {
    "default_icon": {
      "128": "assets/icon.png"
    }
  },
  "commands": {
    "replace-wordorflight": {
      "suggested_key": {
        "default": "Ctrl+M",
      "mac": "Command+Shift+Y"
      },
      "description": "Fetch IATA codes of the flight and Replace Swedish characters in form inputs by Click of CTRL + M "
    }
  }
}
